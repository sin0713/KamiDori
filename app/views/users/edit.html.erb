<div class="user-form">

  <div class="user-form__form">
    <h2 class="user-form__heading">Edit Profile</h2>
    <%= render 'layouts/error', model: @user %>

    <%= form_with model: @user, local: true do |f| %>
      <div class="user-form__field">
        <%= f.label :name, 'Name' %><br />
        <%= f.text_field :name, autofocus: true, required: true, class:"user-form__input" %>
      </div>

      <div class="user-form__field">
        <%= f.label :introduction, "Introduction" %> <br>
        <%= f.text_area :introduction, placeholder:"プロフィールテキスト", class:"user-form__introduction"%>
      </div>

      <div class="user-form__field">
        <%= f.label :image, "Profile Image"%> </br>
        <%= f.attachment_field :image, placeholder: "ファイルを選択", class:"user-form__img" %>
      </div>
      <div class="user-form__submit-wrapper">
        <%= f.submit 'Update', class:"user-form__update" %>
      </div>
    <% end %>

  </div>
</div>

