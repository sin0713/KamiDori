<div class="user-form">

  <div class="user-form__form">
    <h2 class="user-form__heading">Sign Up</h2>

    <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
      <div class="devise-form__field">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, required: true, class:"user-form__input" %>
      </div>

      <div class="user-form__field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, class:"user-form__input" %>
      </div>

      <div class="user-form__field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <span><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></span>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", required: true, class:"user-form__input" %>
      </div>

      <div class="user-form__field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true, class:"user-form__input" %>
      </div>

      <div>
        <%= f.submit 'Sign Up', class:"user-form__sign-up" %>
      </div>
    <% end %>

    <div class="user-form__log-in-wrapper">
      <% if controller_name != 'sessions' %>
        <%= link_to "Log in", new_session_path(resource_name), class:"user-form__log-in-link" %><br />
      <% end %>
    </div>
  </div>
</div>


