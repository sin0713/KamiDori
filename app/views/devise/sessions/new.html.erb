<div class="devise-form-log-in">

  <div class="devise-form__form">
    <h2 class="devise-form__heading">LOG IN</h2>

    <%= form_with model: @user, url: user_session_path, local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="devise-form__field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"devise-form__input" %>
      </div>

      <div class="devise-form__field">
        <%= f.label :password %> </br>
        <%= f.password_field :password, autocomplete: "new-password", class:"devise-form__input" %>
      </div>

      <div class="actions">
        <%= f.submit "Log in", class:"devise-form__log-in-submit" %>
      </div>
    <% end %>

    <div class="devise-form__log-in-wrapper">
      <% if controller_name != 'sessions' %>
        <%= link_to "Log in", new_session_path(resource_name), class:"devise-form__log-in-link" %><br />
      <% end %>
    </div>
  </div>
</div>

<%= render "devise/shared/links" %>
