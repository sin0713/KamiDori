<div class="devise-form-log-in">

  <div class="user-form__form">
    <h2 class="user-form__heading">LOG IN</h2>

    <%= form_with model: @user, url: user_session_path, local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="user-form__field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"user-form__input" %>
      </div>

      <div class="user-form__field">
        <%= f.label :password %> </br>
        <%= f.password_field :password, autocomplete: "new-password", class:"user-form__input" %>
      </div>

      <div class="actions">
        <%= f.submit "Log in", class:"user-form__log-in-submit" %>
      </div>
    <% end %>

    <div class="user-form__log-in-wrapper">
      <% if controller_name != 'sessions' %>
        <%= link_to "Log in", new_session_path(resource_name), class:"user-form__log-in-link" %><br />
      <% end %>
    </div>
    <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "パスワードをお忘れの方はこちらへ", new_password_path(resource_name), class:"user-form__reset-password-link" %><br />
    <% end %>
  </div>
</div>
