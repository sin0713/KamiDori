  <% if user == current_user %>
    <%= link_to '♥お気に入り一覧', favorites_recipes_path, class:"profile__favorite-link" %>
    <a href="/users/<%= user.id %>/edit", class="profile__edit-user-link">プロフィール編集</a>
  <% elsif user.is_followed_by?(current_user) %>
    <%= link_to 'Unfollow', user_relationships_path(user), method: :delete, remote: true, class: "profile__unfollow-btn" %>
  <% else %>
    <%= link_to 'Follow', user_relationships_path(user), method: :post,  remote: true, class: "profile__follow-btn" %>
  <% end %>
  