<div class="recipe-contents__favorite-heading">
  <h2 class="recipe-contents__heading-title">Favorites</h2>
</div>

<div class="recipe-contents">
  <%= render 'users/profile-icon' %>
  <div class="recipe-contents__wrapper">
    <h2 class="recipe-contents__heading">Favorites Recipes</h2>
    <div class="recipe-contents__main">
      <% @recipes.each do |favorite| %>
        <% recipe = Recipe.find(favorite.recipe_id) %>
        <%= render 'recipes/index', recipe: recipe %>
      <% end %>
    </div>
  </div>
  <div class="profile">
    <%= render 'users/profile', user: current_user %>
  </div>
</div>
