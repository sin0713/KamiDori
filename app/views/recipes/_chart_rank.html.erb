<div class="recipe-rank__chart">
  <canvas id="showRaderChart-<%= recipe.id %>"></canvas>
  <script>
    var ctx = document.getElementById("showRaderChart-<%= recipe.id %>");

    var showRadarChart = new Chart(ctx, {
        type: 'radar',
        data: {
            labels: ["苦味", "酸味", "甘味", "香り", "コク"],
            datasets: [{
                label: "テイスト",
                data: [<%= taist.bitter %>, <%= taist.sour %>, <%= taist.sweet %>, <%= taist.flavor %>, <%= taist.rich %>],
                backgroundColor: 'RGBA(210, 220, 220, .5)',
                borderColor: 'RGBA(192, 192, 192, 1)',
                borderWidth: 1,
                pointBackgroundColor: 'RGB(192,192,192)'
            }]
        },
        options: {
          title: {
              display: true,
              text: ''
          },
          scales: {
              r: {
              //グラフの最小値・最大値
                  min: 0,
                  max: 5,
                  ticks: {
                      beginAtZero: true,
                      stepSize: 1
                 },
            },
          }
        }
      });

  </script>
</div>