  <div class="recipe-contents__items">
    <%= link_to recipe_path(recipe) do %>
      <%= attachment_image_tag recipe, :image, fallback: "coffee-cup-book2.jpg", class:"recipe-contents__img" %>
    <% end %>
    <div class="recipe-contents__items-wrapper">
      <div class="recipe-contents__tag">
        <ul>
          <li class="recipe-contents__list"><%= recipe.bean %></li>
          <li class="recipe-contents__list"><%= recipe.tool %></li>
          <li class="recipe-contents__list"><%= recipe.roast_i18n %></li>
        </ul>
      </div>
      <div class="recipe-contents__date-wrapper">
        <p class="recipe-contents__date-month"><%= recipe.created_at.strftime('%m/%d') %><span class="recipe-contents__date-year"><%= recipe.created_at.strftime('%Y') %></span></p>

      </div>
      <span id="favorite_btn-<%= recipe.id %>" class="recipe-contents__favorite-btn">
        <%= render 'favorites/favorite_btn', recipe: recipe %>
      </span>
    </div>
  </div>